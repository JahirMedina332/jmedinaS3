<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="jmedinaS3.View.vLogin"
             Title="Iniciar Sesion" 
             BackgroundColor="Black">
    <VerticalStackLayout>
        <Frame BackgroundColor="WhiteSmoke" WidthRequest="350" HeightRequest="650" VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand">
            <Grid HorizontalOptions="FillAndExpand" RowSpacing="30">
                <Grid.RowDefinitions>
                    
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                 
                </Grid.RowDefinitions>
                <Border Grid.Row="0" VerticalOptions="Center" HorizontalOptions="Center" Margin="0,0" >
                    <Image Source="logo.png" VerticalOptions="Center" Margin="0,0" HeightRequest="90" WidthRequest="98"/>
                    <Border.StrokeShape>
                       <RoundRectangle CornerRadius="50,50,50,50"/>
                    </Border.StrokeShape>
                </Border>
                
                <Entry x:Name="userEntry" Placeholder="Colocar usuario" Grid.Row="1" PlaceholderColor="White" WidthRequest="325" Background="DodgerBlue"/>
                <Entry x:Name="passwordEntry" Keyboard="Password" Placeholder="Colocar contraseña" Grid.Row="2" PlaceholderColor="White" WidthRequest="325" Background="DodgerBlue" VerticalOptions="Center" HorizontalOptions="Center"/>
                <Button x:Name="IniciarSesionbtn" Clicked="OnLoginClicked" Grid.Row="3" WidthRequest="150" Text="Ingresar"  />
                <Button x:Name="Registrarsebtn" Clicked="OnRegisterClicked" Text="Registrarse" Grid.Row="4" WidthRequest="150"/>
                <Label Text="Olvidaste tu contraseña" Grid.Row="5" HorizontalOptions="Center"/>
            </Grid>
        </Frame>
    </VerticalStackLayout>
</ContentPage>